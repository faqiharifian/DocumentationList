<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:divider="#FF72000D"
    android:showDividers="beginning|end">

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Name"
    android:text="Manual Name" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="date"
    android:ems="10"
    android:hint="Date"
    android:text="Manual Date" />

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Author"
    android:text="Manual Author" />

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Custodian"
    android:text="Manual Custodian" />

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="On-Site"
    android:text="Manual On-Site" />

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Off-Site"
    android:text="Manual Off-Site" />
</LinearLayout>